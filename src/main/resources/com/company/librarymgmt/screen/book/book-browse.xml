<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://bookBrowse.caption"
        focusComponent="booksTable">
    <data readOnly="true">
        <collection id="booksDc"
                    class="com.company.librarymgmt.entity.Book">
            <fetchPlan extends="_base">
                <property name="bookIssue" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="booksDl">
                <query>
                    <![CDATA[select e from Book e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="booksTable" spacing="true">
        <filter id="filter"
                dataLoader="booksDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="booksTable"
                    width="100%"
                    dataContainer="booksDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="author"/>
                <column id="bookType"/>
                <column id="bookPrice"/>
                <column id="bookIssue"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="booksTable.create"/>
                <button id="editBtn" action="booksTable.edit"/>
                <button id="removeBtn" action="booksTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
